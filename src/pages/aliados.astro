  { nombre: 'DURAN ASESORES SAS', categoria: 'Consultor√≠a', color: 'from-sky-500 to-sky-600' },
  { nombre: 'FUNDACION RHINO', categoria: 'Fundaci√≥n', color: 'from-emerald-500 to-emerald-600' },
  { nombre: 'ESCUELA SUPERIOR DE INNOVACI√ìN', categoria: 'Educaci√≥n', color: 'from-rose-500 to-rose-600' },
  { nombre: 'CORPORACION INNOVACI√ìN HUB', categoria: 'Innovaci√≥n', color: 'from-fuchsia-500 to-fuchsia-600' },
  { nombre: 'BG3 SAS', categoria: 'Empresarial', color: 'from-slate-500 to-slate-600' },
];
---
<Layout title="Nuestros Aliados Estrat√©gicos ‚Äî Instituto Fundaci√≥n" description="Organizaciones que conf√≠an en nosotros y hacen posible nuestra misi√≥n de transformaci√≥n social.">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800 text-white py-20 overflow-hidden">
    <div class="absolute inset-0 bg-[url('/hero.png')] opacity-10 bg-cover bg-center"></div>
    <div class="absolute top-0 left-0 w-72 h-72 bg-blue-500 rounded-full blur-3xl opacity-20 animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-purple-500 rounded-full blur-3xl opacity-20 animate-pulse" style="animation-delay: 1s"></div>
    
    <div class="relative mx-auto max-w-6xl px-4 text-center">
      <div class="inline-block mb-4 px-4 py-2 bg-blue-500/20 backdrop-blur-sm border border-blue-400/30 rounded-full text-sm font-semibold">
        ü§ù Red de Colaboraci√≥n
      </div>
      <h1 class="text-4xl md:text-6xl font-extrabold mb-6 bg-gradient-to-r from-white via-blue-100 to-white bg-clip-text text-transparent">
        Nuestros Aliados Estrat√©gicos
      </h1>
      <p class="text-lg md:text-xl text-blue-100 max-w-3xl mx-auto leading-relaxed">
        Trabajamos de la mano con organizaciones comprometidas con la transformaci√≥n social, 
        la innovaci√≥n y el desarrollo comunitario.
      </p>
      
      <!-- Estad√≠sticas -->
      <div class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        <div class="bg-white/10 backdrop-blur-md rounded-2xl p-6 border border-white/20">
          <div class="text-4xl font-bold text-blue-300">{aliados.length}</div>
          <div class="text-sm text-blue-100 mt-2">Aliados Activos</div>
        </div>
        <div class="bg-white/10 backdrop-blur-md rounded-2xl p-6 border border-white/20">
          <div class="text-4xl font-bold text-green-300">7+</div>
          <div class="text-sm text-blue-100 mt-2">Sectores</div>
        </div>
        <div class="bg-white/10 backdrop-blur-md rounded-2xl p-6 border border-white/20">
          <div class="text-4xl font-bold text-purple-300">500+</div>
          <div class="text-sm text-blue-100 mt-2">Vidas Impactadas</div>
        </div>
        <div class="bg-white/10 backdrop-blur-md rounded-2xl p-6 border border-white/20">
          <div class="text-4xl font-bold text-orange-300">100%</div>
          <div class="text-sm text-blue-100 mt-2">Compromiso</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Aliados Grid -->
  <section class="mx-auto max-w-7xl px-4 py-16 bg-slate-50">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
        Organizaciones que Conf√≠an en Nosotros
      </h2>
      <p class="text-slate-600 max-w-2xl mx-auto">
        Cada alianza representa un compromiso compartido por la educaci√≥n de calidad, 
        la innovaci√≥n social y el desarrollo de oportunidades reales.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      {aliados.map((a, index) => {
        // Extraer iniciales (m√°x 2 letras)
        const iniciales = a.nombre.split(' ').filter(w => w.length > 2).map(w => w[0]).slice(0,2).join('').toUpperCase();
        return (
          <article 
            class="aliado-card group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden border border-slate-200"
            style={`animation-delay: ${index * 0.05}s`}
          >
            {/* Barra superior con color de categor√≠a */}
            <div class={`absolute top-0 left-0 right-0 h-1 bg-gradient-to-r ${a.color}`}></div>
            
            {/* Fondo decorativo animado */}
            <div class={`absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br ${a.color} rounded-full opacity-5 group-hover:opacity-10 transition-opacity duration-500 blur-2xl`}></div>
            
            <div class="relative p-8 flex flex-col items-center text-center min-h-[280px]">
              {/* Logo/Iniciales o PDF */}
              <div class="mb-6 transform group-hover:scale-110 transition-transform duration-500">
                {a.pdf ? (
                  <a 
                    href="/partners/geodesa.pdf" 
                    download 
                    class="inline-flex flex-col items-center gap-3 px-6 py-4 bg-gradient-to-br from-red-50 to-orange-50 text-red-700 rounded-2xl font-semibold border-2 border-red-200 shadow-lg hover:shadow-xl hover:from-red-100 hover:to-orange-100 transition-all duration-300"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    </svg>
                    <span class="text-sm">Descargar PDF</span>
                  </a>
                ) : (
                  <div class={`w-20 h-20 rounded-2xl bg-gradient-to-br ${a.color} flex items-center justify-center shadow-xl relative`}>
                    <span class="text-3xl font-black text-white tracking-wider select-none drop-shadow-lg">
                      {iniciales}
                    </span>
                    {/* Detalle decorativo */}
                    <div class="absolute -top-1 -right-1 w-4 h-4 bg-white rounded-full shadow"></div>
                  </div>
                )}
              </div>

              {/* Informaci√≥n */}
              <div class="flex-1 flex flex-col justify-between w-full">
                <div>
                  <h3 class="text-base font-bold text-slate-900 mb-2 leading-tight group-hover:text-blue-700 transition-colors">
                    {a.nombre}
                  </h3>
                  <span class={`inline-block px-3 py-1 text-xs font-semibold rounded-full bg-gradient-to-r ${a.color} text-white shadow`}>
                    {a.categoria}
                  </span>
                </div>

                {/* Badge decorativo */}
                <div class="mt-4 pt-4 border-t border-slate-100">
                  <div class="flex items-center justify-center gap-2 text-xs text-slate-500">
                    <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span class="font-medium">Aliado Verificado</span>
                  </div>
                </div>
              </div>
            </div>

            {/* Efecto hover bottom */}
            <div class="absolute bottom-0 left-0 right-0 h-0 bg-gradient-to-t from-blue-50 to-transparent group-hover:h-full transition-all duration-500 -z-10"></div>
          </article>
        );
      })}
    </div>
  </section>

  <!-- CTA Section -->
