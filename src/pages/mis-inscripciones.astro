---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Mis Inscripciones ‚Äî FCM INSTITUTE" description="Panel de administraci√≥n de inscripciones">
  <div class="mx-auto max-w-7xl px-4 py-12">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-3 mb-3">
        <svg class="w-8 h-8 text-amber-500" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
        <h1 class="text-4xl font-bold text-slate-900">Panel de Administraci√≥n</h1>
      </div>
      <div class="inline-block bg-amber-100 text-amber-800 px-4 py-2 rounded-full text-sm font-semibold">
        üõ°Ô∏è Solo accesible para administradores
      </div>
    </div>

    <!-- Loading State -->
    <div id="loading-state" class="text-center py-12">
      <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
      <p class="mt-4 text-slate-600">Cargando inscripciones...</p>
    </div>

    <!-- Tabla de inscripciones -->
    <div id="table-container" class="hidden overflow-x-auto bg-white rounded-lg shadow-md border border-slate-200">
      <table class="w-full">
        <thead class="bg-gradient-to-r from-slate-800 to-slate-900 text-white">
          <tr>
            <th class="px-6 py-4 text-left text-sm font-semibold">Nombre</th>
            <th class="px-6 py-4 text-left text-sm font-semibold">Correo</th>
            <th class="px-6 py-4 text-left text-sm font-semibold">Programa</th>
            <th class="px-6 py-4 text-left text-sm font-semibold">Costo</th>
            <th class="px-6 py-4 text-left text-sm font-semibold">Estado Pago</th>
            <th class="px-6 py-4 text-left text-sm font-semibold">Fecha Inscripci√≥n</th>
            <th class="px-6 py-4 text-left text-sm font-semibold">Acci√≥n</th>
          </tr>
        </thead>
        <tbody id="inscriptions-tbody" class="divide-y divide-slate-200">
          <!-- Se llena con JavaScript -->
        </tbody>
      </table>
    </div>

    <!-- Empty State -->
    <div id="empty-state" class="hidden text-center py-12">
      <svg class="w-24 h-24 text-slate-200 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h2 class="text-2xl font-bold text-slate-900 mb-2">No hay inscripciones</h2>
      <p class="text-slate-600">A√∫n no hay estudiantes inscritos en los programas.</p>
    </div>

    <!-- Modal de √©xito -->
    <div id="success-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-xl p-8 max-w-md w-full">
        <svg class="w-16 h-16 text-green-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <h3 class="text-xl font-bold text-slate-900 text-center mb-2">¬°√âxito!</h3>
        <p id="success-message" class="text-slate-600 text-center"></p>
        <button onclick="document.getElementById('success-modal').classList.add('hidden')" class="w-full mt-6 bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium">
          Cerrar
        </button>
      </div>
    </div>

    <!-- Modal de error -->
    <div id="error-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-xl p-8 max-w-md w-full">
        <svg class="w-16 h-16 text-red-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
        <h3 class="text-xl font-bold text-slate-900 text-center mb-2">Error</h3>
        <p id="error-message" class="text-slate-600 text-center"></p>
        <button onclick="document.getElementById('error-modal').classList.add('hidden')" class="w-full mt-6 bg-red-600 text-white py-2 rounded-lg hover:bg-red-700 transition-colors font-medium">
          Cerrar
        </button>
      </div>
    </div>
  </div>

  <script>
    import { getUser, getInscripciones, generarLinkPago } from '../lib/auth.ts';

    function checkAdminAccess() {
      const user = getUser();
      if (!user || !Array.isArray(user.role) || !user.role.includes('admin')) {
        alert('‚ùå No tienes acceso. Solo administradores pueden ver esta p√°gina.');
        window.location.href = '/';
        return false;
      }
      return true;
    }

    function formatCurrency(amount) {
      return new Intl.NumberFormat('es-CO', {
        style: 'currency',
        currency: 'COP',
        minimumFractionDigits: 0,
      }).format(amount);
    }

    function formatDate(dateString) {
      return new Intl.DateTimeFormat('es-CO', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
      }).format(new Date(dateString));
    }

    function getStatusBadge(status) {
      const statusMap = {
        'Pendiente': { bg: 'bg-yellow-100', text: 'text-yellow-800', icon: '‚è≥' },
        'Completado': { bg: 'bg-green-100', text: 'text-green-800', icon: '‚úì' },
        'Fallido': { bg: 'bg-red-100', text: 'text-red-800', icon: '‚úó' },
      };
      const s = statusMap[status] || { bg: 'bg-gray-100', text: 'text-gray-800', icon: '‚Ä¢' };
      return `<span class="${s.bg} ${s.text} px-3 py-1 rounded-full text-sm font-medium">${s.icon} ${status}</span>`;
    }

    async function renderInscripciones() {
      if (!checkAdminAccess()) return;

      const tbody = document.getElementById('inscriptions-tbody');
      const tableContainer = document.getElementById('table-container');
      const emptyState = document.getElementById('empty-state');
      const loadingState = document.getElementById('loading-state');

      try {
        const inscripciones = await getInscripciones();

        loadingState?.classList.add('hidden');

        if (!inscripciones || inscripciones.length === 0) {
          emptyState?.classList.remove('hidden');
          return;
        }

        tableContainer?.classList.remove('hidden');

        tbody.innerHTML = inscripciones.map(insc => {
          const user = insc.user;
          const programa = insc.programa;
          const pago = insc.pagos?.[0];
          const nombreCompleto = `${user.firstName} ${user.lastName}`;

          return `
            <tr class="hover:bg-slate-50 transition-colors">
              <td class="px-6 py-4 text-sm font-medium text-slate-900">${nombreCompleto}</td>
              <td class="px-6 py-4 text-sm text-slate-600">${user.email}</td>
              <td class="px-6 py-4 text-sm text-slate-600">${programa.nombre}</td>
              <td class="px-6 py-4 text-sm font-semibold text-slate-900">${formatCurrency(programa.costo)}</td>
              <td class="px-6 py-4 text-sm">${getStatusBadge(pago?.estado || 'Pendiente')}</td>
              <td class="px-6 py-4 text-sm text-slate-600">${formatDate(insc.fechaInscripcion)}</td>
              <td class="px-6 py-4 text-sm">
                ${pago?.estado === 'Pendiente' ? `
                  <button onclick="generarLink('${pago.id}')" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-xs font-semibold">
                    Generar Link
                  </button>
                ` : `<span class="text-slate-400">‚Äî</span>`}
              </td>
            </tr>
          `;
        }).join('');
      } catch (error) {
        console.error('Error al cargar inscripciones:', error);
        loadingState?.classList.add('hidden');
        const errorMsg = document.getElementById('error-message');
        if (errorMsg) errorMsg.textContent = error.message || 'Error al cargar inscripciones';
        document.getElementById('error-modal')?.classList.remove('hidden');
      }
    }

    window.generarLink = async (pagoId) => {
      try {
        const result = await generarLinkPago(pagoId);
        if (result?.url) {
          const successMsg = document.getElementById('success-message');
          if (successMsg) successMsg.textContent = 'Link de pago generado. Redirigiendo...';
          document.getElementById('success-modal')?.classList.remove('hidden');
          setTimeout(() => window.open(result.url, '_blank'), 1500);
        }
      } catch (error) {
        console.error('Error al generar link:', error);
        const errorMsg = document.getElementById('error-message');
        if (errorMsg) errorMsg.textContent = error.message || 'Error al generar link de pago';
        document.getElementById('error-modal')?.classList.remove('hidden');
      }
    };

    // Render cuando carga la p√°gina
    document.addEventListener('DOMContentLoaded', renderInscripciones);
  </script>
</Layout>
