---
import Layout from '../layouts/Layout.astro';
const documentos = [
  { nombre: 'Informe de gestión 2024', archivo: '/transparencia/informe-gestion-2024.pdf', peso: '2.3 MB' },
  { nombre: 'Estados financieros 2024', archivo: '/transparencia/estados-financieros-2024.pdf', peso: '1.2 MB' },
  { nombre: 'Política de tratamiento de datos', archivo: '/transparencia/politica-tratamiento-datos.pdf', peso: '350 KB' },
];
---
<Layout title="Transparencia — Instituto Fundación" description="Informes y políticas de transparencia de la fundación.">
  <section class="mx-auto max-w-3xl px-4 py-12">
    <h1 class="text-3xl md:text-4xl font-bold">Transparencia</h1>
    <p class="mt-3 text-slate-700">
      Aquí encontrarás nuestros informes de gestión, estados financieros y políticas institucionales.
    </p>

    <ul class="mt-6 divide-y">
      {documentos.map((doc) => (
        <li class="py-4 flex items-center justify-between">
          <div>
            <h3 class="font-semibold">{doc.nombre}</h3>
            <p class="text-sm text-slate-600">{doc.peso} — PDF</p>
          </div>
          <div class="flex items-center gap-2">
            <a href={doc.archivo} class="px-4 py-2 rounded border" download>Descargar</a>
            <a href={doc.archivo} class="px-4 py-2 rounded bg-slate-900 text-white" target="_blank" rel="noopener">
              Ver
            </a>
          </div>
        </li>
      ))}
    </ul>
  </section>
</Layout>
