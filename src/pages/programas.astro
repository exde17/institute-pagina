      {programasData.map((programa, index) => (
        <article 
          class="programa-card bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 group"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Imagen del programa -->
